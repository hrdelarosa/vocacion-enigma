---
interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<div
  class="bg-woodsmoke-100/45 dark:bg-woodsmoke-900/25 p-5 lg:p-10 rounded-lg space-y-6 lg:space-y-8"
>
  <div class="space-y-2.5">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-center">
      {title}
    </h2>
    {description && <p class="text-center text-balance">{description}</p>}
  </div>

  <slot />
</div>

---
import ThemeSwitch from '../../UI/ThemeSwitch.astro'
import Button from '../../UI/buttons/Button.astro'
import ArrowLeft from '../../../assets/icons/arrowLeft.svg'
import Printer from '../../../assets/icons/printer.svg'
---

<header
  class="sticky w-full top-0 z-50 py-5 bg-white dark:bg-black border-b border-woodsmoke-300/55 dark:border-woodsmoke-600/55 print:hidden transition-bg"
>
  <nav
    class="relative flex flex-wrap items-center justify-between max-w-4xl mx-auto"
  >
    <a
      href="/prueba/resultados"
      class={`flex items-center justify-center gap-2 font-semibold rounded-lg cursor-pointer transition-all group dark:hover:shadow-black/90 px-3 py-2 text-sm outline-1 outline-woodsmoke-300/55 text-primary-dark dark:text-primary-light hover:bg-woodsmoke-100/55 hover:shadow-none duration-300 ease-in-out dark:outline-woodsmoke-600/55 dark:hover:bg-woodsmoke-800/55 dark:hover:shadow-none`}
    >
      <ArrowLeft
        slot="icon"
        width={18}
        height={18}
        class="group-hover:-translate-x-0.5 transition-transform"
      />
      Regresar
    </a>

    <div class="flex items-center gap-2">
      <ThemeSwitch />

      <Button size="small" text="Imprimir" action="print">
        <Printer slot="icon" width={18} height={18} />
      </Button>
      <!-- <Button
        size="small"
        text="Descargar"
        button="outline"
        id="download-pdf"
      /> -->
    </div>
  </nav>
</header>

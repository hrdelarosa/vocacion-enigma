---
interface Props {
  title: string
  description?: string
  text?: string
}

const { title, description, text } = Astro.props
---

<article
  class="h-full flex flex-col gap-3 rounded-lg p-6 border border-woodsmoke-300/55 hover:border-woodsmoke-300/85 dark:border-woodsmoke-600/55 dark:hover:border-woodsmoke-600/85 transition-all shadow-sm hover:shadow-md dark:shadow-black/40 dark:hover:shadow-black/60"
>
  <div class="flex flex-row items-center gap-4">
    <slot name="icon" />

    <div>
      <h3
        class="text-2xl font-semibold text-sail-800 dark:text-sail-200 leading-none tracking-tight"
      >
        {title}
      </h3>
      {
        description && (
          <p class="text-sm text-woodsmoke-400 dark:text-woodsmoke-300">
            {description}
          </p>
        )
      }
    </div>
  </div>

  {
    text ? (
      <p class="text-primary-dark dark:text-primary-light">{text}</p>
    ) : (
      <slot />
    )
  }
</article>
